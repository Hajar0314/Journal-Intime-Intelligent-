<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" 
      xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.journalintime.ui.controller.LoginController"
      stylesheets="@../css/styles.css"
      styleClass="root">

    <VBox spacing="15" maxWidth="400" alignment="CENTER" styleClass="card">
        <Label fx:id="appTitleLabel" text="Journal Intime" styleClass="title-label"/>
        <Label fx:id="loginHeaderLabel" text="Login" style="-fx-font-size: 18px; -fx-text-fill: -color-primary-dark;"/>
        
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <CheckBox fx:id="rememberMeCheckbox" text="Remember Me" style="-fx-text-fill: -color-text;"/>
        
        <Label fx:id="errorLabel" textFill="RED" wrapText="true"/>
        
        <Button fx:id="loginBtn" text="Login" onAction="#handleLogin" maxWidth="Infinity" defaultButton="true"/>
        <Hyperlink fx:id="registerLink" text="No account? Register" onAction="#handleGoToRegister" style="-fx-text-fill: -color-accent-dark;"/>
    </VBox>
</VBox>
